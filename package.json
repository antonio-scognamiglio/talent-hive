{
  "name": "talent-hive-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "engine:colima": "colima start",
    "engine:docker-desktop": "open -a Docker",
    "docker:up": "docker-compose up -d",
    "dev": "bun run docker:up && bunx concurrently --names \"BACKEND,FRONTEND\" -c \"magenta,blue\" \"bun run --filter backend dev\" \"bun run --filter frontend dev\"",
    "prepare": "husky",
    "commit": "cz",
    "typecheck:frontend": "cd frontend && tsc -b",
    "typecheck:backend": "cd backend && bunx tsc -p tsconfig.json --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  }
}
